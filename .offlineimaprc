[general]
accounts = hhu, outlook, gmail
starttls = yes
ssl = yes
pythonfile = ~/.config/mutt/credentials/imappwd.py



[Account hhu]
localrepository = hhu-local
remoterepository = hhu-remote

[Repository hhu-remote]
auth_mechanisms = LOGIN
type = IMAP
remoteuser = otlin100
remotepasseval = mailpasswd("hhu")
remotehost = mail.hhu.de
remoteport = 993
sslcacertfile = /etc/ssl/certs/ca-certificates.crt

[Repository hhu-local]
type = Maildir
localfolders = ~/.mail/hhu


[Account outlook]
localrepository = outlook-local
remoterepository = outlook-remote

[Repository outlook-remote]
auth_mechanisms = LOGIN
type = IMAP
remoteuser = ottolin@outlook.de
remotepasseval = mailpasswd("outlook")
remotehost = imap-mail.outlook.com
remoteport = 993
sslcacertfile = /etc/ssl/certs/ca-certificates.crt

[Repository outlook-local]
type = Maildir
localfolders = ~/.mail/outlook


[Account gmail]
localrepository = gmail-local
remoterepository = gmail-remote

[Repository gmail-remote]
auth_mechanisms = LOGIN
type = Gmail
remoteuser = 0ttolin42.ol@gmail.com
remotepasseval = mailpasswd("gmail")
remoteport = 993
folderfilter = lambda foldername: foldername not in ['[Gmail]/All Mail']
sslcacertfile = /etc/ssl/certs/ca-certificates.crt

[Repository gmail-local]
type = Maildir
localfolders = ~/.mail/gmail
