defaults
auth	on
tls	on
tls_trust_file	/etc/ssl/certs/ca-certificates.crt
logfile	~/.msmtp.log

account hhu
host mail.hhu.de
port 587
from otlin100
user otlin100
passwordeval "gpg -d --quiet --for-your-eyes-only --no-tty ~/.config/mutt/credentials/hhu.gpg | sed -e '$a\'"

account outlook
host smtp-mail.outlook.com
port 587
from ottolin@outlook.de
user ottolin@outlook.de
passwordeval "gpg -d --quiet --for-your-eyes-only --no-tty ~/.config/mutt/credentials/outlook.gpg | sed -e '$a\'"
