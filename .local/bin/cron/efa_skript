#!/bin/sh

skript_efa=~/reading/skript_efa.pdf
skript_efa_new=/tmp/skript_efa.pdf

curl --user Student:Fredholm http://reh.math.uni-duesseldorf.de/~internet/EFA_SS20/pd-efa_ss20.pdf --output "$skript_efa_new"

diff -q "$skript_efa_new" "$skript_efa" && exit

mv "$skript_efa_new" "$skript_efa" && notify-send -t 0 "$(basename $skript_efa) updated"
