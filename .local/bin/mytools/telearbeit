#!/bin/bash

location=$1

set -o pipefail; pgrep -a openvpn | grep -w "$location" | cut -d' ' -f1 | xargs -r sudo kill && notify-send "VPN ""$location"" disconnected" && git-team disable && pkill -RTMIN+16 dwmblocks && exit

password_file="$XDG_DATA_HOME"/openvpn/password
touch "$password_file"

[ "$location" = "hhu" ] && username=otlin100 && gopass=ol/general/hhu/otlin100_
[ "$location" = "sipgate" ] && username=lin && gopass=ol/general/sipgate/ldap/lin

[ -v username ] || { notify-send "unknown location ""$location" ; exit ; }
echo "$username" > "$password_file"

gopass show "$gopass" | grep -vE "^username: " >> "$password_file" || { notify-send "No Authentication. Exit." ; exit ; }

sudo openvpn --config "$XDG_DATA_HOME"/openvpn/"$location" --auth-user-pass "$password_file" --daemon &&
    notify-send "successfully connected to ""$location"" VPN" ||
    notify-send -u critical "connection to ""$location"" VPN failed!"

rm "$password_file"

pkill -RTMIN+16 dwmblocks
