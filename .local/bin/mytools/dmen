#!/usr/bin/env sh

# look in "${HOME}/.cache/wal/colors.sh" for the colors

color0='#1d1f21'
color6='#8abeb7'
color15='#ffffff'

darkGrey='#222222'
white='#eeeeee'
yellow='#fabd2f'

colored="-nb $color0 -nf $white -sb $color6 -sf $color0"
pass_color="-nb $darkGrey -nf $white -sb $yellow -sf $darkGrey"

first="$1"
shift
case "$first" in
    run)
        dmenu_run $colored -fn "$(getfont)" "$@" ;;
    pass)
        dmenu -P $pass_color -fn "FuraMono Nerd Font:size=9" -p "ï„¾ $1" <&- ;;
    clip)
        clipmenu $colored -fn "$(getfont)" ;;
    *)
        dmenu $colored -fn "$(getfont)" "$first" "$@" ;;
esac
