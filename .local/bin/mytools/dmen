#!/usr/bin/env sh

# look in "${HOME}/.cache/wal/colors.sh" for the colors

color0='#1d1f21'
color6='#8abeb7'
color15='#ffffff'

darkGrey='#222222'
white='#eeeeee'

colored="-nb $color0 -nf $color15 -sb $color6 -sf $color15"
uncolored="-nb $darkGrey -nf $white -sb $darkGrey -sf $white"

first="$1"
shift
case "$first" in
    run)
        dmenu_run $colored -fn "$(getfont)" "$@" ;;
    pass)
        dmenu -b -P $uncolored -fn "FuraMono Nerd Font:size=9" -p "ï„¾ $1" <&- ;;
    clip)
        clipmenu $colored -fn "$(getfont)" ;;
    *)
        dmenu $colored -fn "$(getfont)" "$first" "$@" ;;
esac
