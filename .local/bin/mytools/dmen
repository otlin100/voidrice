#!/bin/sh

# look in "${HOME}/.cache/wal/colors.sh" for the colors
color0='#292D3E'
color6='#82AAFF'
color15='#FFFFFF'

darkGrey='#222222'
white='#eeeeee'
yellow='#fabd2f'

colored="-nb ""$color0"" -nf ""$white"" -sb ""$color6"" -sf ""$color0"
pass_color="-nb ""$darkGrey"" -nf ""$white"" -sb ""$yellow"" -sf ""$darkGrey"
pass_prompt="ï„¾"
pass_font="FuraMono Nerd Font:size=9"

first="$1"
[ -z "$first" ] && dmenu $colored -fn "$(getfont)" && exit

shift
case "$first" in
    run)
        dmenu_run $colored -fn "$(getfont)" "$@" ;;
    pass)
        dmenu -P $pass_color -fn "$pass_font" -p "$pass_prompt $1" <&- ;;
    clip)
        clipmenu $colored -fn "$(getfont)" ;;
    *)
        dmenu $colored -fn "$(getfont)" "$first" "$@" ;;
esac
