#!/usr/bin/env bash
#usage: fontsize +/- x

pgrep -f fontsize | grep -v $$ | xargs kill

sed -i -r 's/(^\*\.font:)(.*-)([0-9]+\.?[0|5]?)(.*)/echo "\1\2$(printf %.1f $(echo \3 '"$1"'| bc))\4"/ge' ~/.config/X11/Xresources
pkill -RTMIN+14 i3blocks

sleep 2

xrdb ~/.config/X11/Xresources
wal -i ~/.config/wall.png
