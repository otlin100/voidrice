#!/bin/sh

case "$1" in
    reboot)
        reboot ;;
    shutdown)
        sudo shutdown -h now ;;
    suspend)
        sudo systemctl suspend ;;
    hibernate)
        sudo systemctl hibernate ;;
    lock)
        slock ;;
    logout)
        kill -TERM $(pgrep -u $USER "\bdwm$") ;;
    refresh)
        kill -HUP $(pgrep -u $USER "\bdwm$") ;;
    network)
        sudo systemctl restart NetworkManager && notify-send "restart NetworkManager" ;;
    bar)
        update_bar ;;
    monitor)
        autorandr -c ;;
esac
