#!/usr/bin/env sh
# Give a battery name (e.g. BAT0) as an argument.

case $BLOCK_BUTTON in
    3) pgrep -x dunst >/dev/null 2>&1 && notify-send "ğŸ”‹ Battery module" "ğŸ”‹: discharging
ğŸ›‘: not charging
â™»: stagnant charge
ğŸ”Œ: charging
âš¡: charged
â—: battery very low!
- Text color reflects charge left" ;;
esac

capacity=$(cat /sys/class/power_supply/"$1"/capacity) || exit
status=$(cat /sys/class/power_supply/"$1"/status)

if [ "$capacity" -ge 75 ]; then
	color="#00ff00"
elif [ "$capacity" -ge 50 ]; then
	color="#ffffff"
elif [ "$capacity" -ge 20 ]; then
	color="#ffff00"
else
	color="#ff0000"
fi

[ "$capacity" -lt 12 ] && [ "$status" != "Charging" ] &&
    pgrep -x dunst >/dev/null 2>&1 &&
    notify-send -t 7000 -u critical "Battery low! Will hibernate automatically when below 9%." &&
    mynotify &&
    warn="â—"

[ "$capacity" -lt 9 ] && [ "$status" != "Charging" ] &&
    sudo systemctl hibernate

[ -z $warn ] && warn=" "

[ "$status" = "Charging" ] && color="#ffffff"

printf \
    "<span color='%s'>%s%s%s</span>\n" \
    "$color" \
    "$(echo "$status" | sed -e "s/,//;s/Discharging/ğŸ”‹/;s/Not Charging/ğŸ›‘/;s/Charging/ğŸ”Œ/;s/Unknown/â™»ï¸/;s/Full/âš¡/;s/ 0*/ /g;s/ :/ /g")" \
    "$warn" \
    "$(echo "$capacity" | sed -e 's/$/%/')"
