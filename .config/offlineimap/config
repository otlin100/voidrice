[general]
accounts = hhu, outlook, gmail
starttls = yes
ssl = yes
pythonfile = ${XDG_CONFIG_HOME}/mutt/credentials/imappwd.py
metadata = ${XDG_CACHE_HOME}/offlineimap


[Account hhu]
localrepository = hhu-local
remoterepository = hhu-remote

[Repository hhu-remote]
auth_mechanisms = LOGIN
type = IMAP
remoteuser = otlin100
remotepasseval = mailpasswd("hhu")
remotehost = mail.hhu.de
remoteport = 993
sslcacertfile = /etc/ssl/certs/ca-certificates.crt

[Repository hhu-local]
type = Maildir
localfolders = $XDG_DATA_HOME/mail/hhu


[Account outlook]
localrepository = outlook-local
remoterepository = outlook-remote

[Repository outlook-remote]

folderfilter = lambda folder: folder not in [
    'Calendar',
    'Calendar/Birthdays',
    'Calendar/Sub Folder 1',
    'Calendar/Sub Folder 2',
    'Calendar/United States holidays',
    'Contacts',
    'Contacts/Sub Folder 1',
    'Contacts/Sub Folder 2',
    'Contacts/Skype for Business Contacts',
    'Deleted Items',
    'Drafts',
    'Journal',
    'Junk Email',
    'Notes',
    'Outbox',
    'Sync Issues',
    'Sync Issues/Conflicts',
    'Sync Issues/Local Failures',
    'Sync Issues/Server Failures',
    'Tasks',
    'Tasks/Sub Folder 1',
    'Tasks/Sub Folder 2',
    ]

auth_mechanisms = LOGIN
type = IMAP
remoteuser = ottolin@outlook.de
remotepasseval = mailpasswd("outlook")
remotehost = imap-mail.outlook.com
remoteport = 993
sslcacertfile = /etc/ssl/certs/ca-certificates.crt

[Repository outlook-local]
type = Maildir
localfolders = $XDG_DATA_HOME/mail/outlook


[Account gmail]
localrepository = gmail-local
remoterepository = gmail-remote

[Repository gmail-remote]

folderfilter = lambda foldername: foldername not in [
    '[Gmail]/Alle Nachrichten',
    '[Gmail]/All Mail',
    ]

auth_mechanisms = LOGIN
type = IMAP
remoteuser = 0ttolin42.ol@gmail.com
remotepasseval = mailpasswd("gmail")
remotehost = imap.gmail.com
remoteport = 993
sslcacertfile = /etc/ssl/certs/ca-certificates.crt
ssl_version = tls1_2

[Repository gmail-local]
type = Maildir
localfolders = $XDG_DATA_HOME/mail/gmail
