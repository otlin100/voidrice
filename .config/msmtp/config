# vim: filetype=msmtp

defaults
auth on
tls on
tls_trust_file /etc/ssl/certs/ca-certificates.crt
logfile ~/.config/msmtp/msmtp.log

account sipgate
host smtp.gmail.com
port 587
from lin@sipgate.de
user lin@sipgate.de
passwordeval "gopass mutt-wizard-sipgate"

account hhu
host mail.hhu.de
port 465
from otto.lin@hhu.de
user otto.lin@hhu.de
passwordeval "gopass mutt-wizard-hhu"

account outlook
host smtp-mail.outlook.com
port 587
from ottolin@outlook.de
user ottolin@outlook.de
passwordeval "gopass mutt-wizard-outlook"
