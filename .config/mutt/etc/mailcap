text/plain; nvim %s ;
text/html; ~/.config/mutt/etc/openfile.sh %s ;
text/html; w3m -I %{charset} -T text/html; copiousoutput;
image/*; ~/.config/mutt/etc/muttimage.sh %s ; copiousoutput
video/*; setsid mpv --quiet %s &; copiousoutput
application/pdf; ~/.config/mutt/etc/openfile.sh %s ;
application/pgp-encrypted; gpg2 -d --homedir "$XDG_DATA_HOME"/gnupg '%s'; copiousoutput;
application/msword; libreoffice %s; copiousoutput;
